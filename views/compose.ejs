<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" name="postTitle" class="form-control" id="title" placeholder="Enter a new Tile" required autofocus>
  </div>

  <div class="form-group">
    <label for="post">Post:</label>
    <textarea  name="postBody" class="form-control" rows="8" cols="80" id="post" placeholder="Enter a new note"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>


<%- include("partials/footer"); -%>
